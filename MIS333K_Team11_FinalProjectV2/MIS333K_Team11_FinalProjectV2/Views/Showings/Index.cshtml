@model IEnumerable<MIS333K_Team11_FinalProjectV2.Models.Showing>
@using MIS333K_Team11_FinalProjectV2.Models

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-info" })
    @Html.ActionLink("Search By Date", "DateSearch", null, new { @class = "btn btn-info" })
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.SponsoringMovies)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ShowDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Theatre)
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.StartTime)
        </th>*@
        <th>
            Running Time
        </th>
        <th>
            MPAA Rating
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
    <tr>
        @*<td>
            @Html.DisplayFor(modelItem => item.SponsoringMovies)
        </td>*@
        <td>
            @foreach (Movie mov in item.SponsoringMovies)
        {
            @Html.DisplayFor(modelItem => mov.MovieTitle)
    }
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ShowDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Theatre)
        </td>
        @*<td>
            @Html.DisplayFor(modelItem => item.StartTime)
        </td>*@
        <td>
            @foreach (Movie mov in item.SponsoringMovies)
        {
            @Html.DisplayFor(modelItem => mov.RunningTime)
    }
        </td>
        <td>
            @foreach (Movie mov in item.SponsoringMovies)
        {
            @Html.DisplayFor(modelItem => mov.MPAAratings)
    }
        </td>
        @*<td>
            @Html.DisplayFor(modelItem => item.RunTime)
        </td>*@
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.ShowingID }) |
            @Html.ActionLink("Details", "Details", new { id = item.ShowingID }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.ShowingID })
        </td>
    </tr>
    }

</table>